      "routeclass": "./sampleservice.js",
      "routefunction": "addContactPage",
      "description": "Route for creation of new contact",
      "bodyschema": {
        "type": "object",
        "required": [
          "firstname",
          "lastname",
          "accountname",
          "jobtitle",
          "functionname",
          "department",
          "phone",
          "city",
          "fax",
          "mobile",
          "email"
